<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:divider="@drawable/separator"
        android:dividerPadding="3dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:showDividers="beginning" >

        <Button
            android:id="@+id/button_state_usb"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/button_selector_search_fragment"
            android:text="@string/check_state_usb"
            android:textColor="@drawable/button_text_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:divider="@drawable/separator"
        android:dividerPadding="3dp"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <ToggleButton
            android:id="@+id/toggleConnectControlPoint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@drawable/list_selector_toggle"
            android:textOff="@string/connect"
            android:textOn="@string/disconnect"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/separator"
        android:dividerPadding="3dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_handle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/button_selector_search_fragment"
            android:text="@string/handle_control"
            android:textColor="@drawable/button_text_selector" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="318dp"
            android:layout_height="264dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/vko" />

    </RelativeLayout>

</LinearLayout>