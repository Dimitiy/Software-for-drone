<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_grey_800"
    android:keepScreenOn="true" >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <include layout="@layout/toolbar_transparent" />

     <LinearLayout
        android:id="@+id/layout_compass"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_720_compass"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="horizontal" >
    </LinearLayout>

   <RelativeLayout
        android:id="@+id/text_handle"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="bottom"
        android:paddingBottom="30dp" >

        <TextView
            android:id="@+id/textViewCmdSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewCmdSend"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewY"
            android:layout_alignParentStart="true" />

        <ToggleButton
            android:id="@+id/LightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#B3689f38"
            android:textOff="Вкл"
            android:textOn="Выкл" />
    </RelativeLayout>

</FrameLayout>